<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('../partials/head, {title: 'Resultados de tu búsqueda'}) %>

<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->
    
    <main class="main-form">
        <form class="formulario" action="pagina_principal.html" method="post">

            <div class="campos">
                <label for="nombre">Nombre y Apellido:</label>
                <input type="text" id="nombre" name="nombre" required>
            </div>

            <div class="campos">
                <label for="usuario">Nombre de usuario:</label>
                <input type="text" id="usuario" name="usuario" required>
                <span id="error-usuario" class="error-usuario"></span>
            </div>

            <div class="campos">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="campos-fecha">
                <label for="fecha_nacimiento">Fecha de nacimiento:</label>
                <input type="date" id="fecha_nacimiento" name="fecha_nacimiento" required>
            </div>

            <div class="campos">
                <label for="domicilio">Domicilio:</label>
                <input type="text" id="domicilio" name="domicilio" required>
            </div>

            <div class="campos">
                <label for="perfil">Perfil de usuario:</label>
                <select id="perfil" name="perfil">
                    <option value="comprar">Comprar</option>
                    <option value="vender">Vender</option>
                </select>
            </div>

            <div class="categorias">
                <label> Categoria de interes:</label>
            </div>

            <div class="intereses">
                    <label for="electro">Electro</label>
                    <input type="checkbox" id="electro" name="categorias[]" value="electro">

                    <label for="moda">Moda</label>
                    <input type="checkbox" id="moda" name="categorias[]" value="moda">

                    <label for="hogar">Hogar</label>
                    <input type="checkbox" id="hogar" name="categorias[]" value="hogar">

                    <label for="Juguetería">Juguetería</label>
                    <input type="checkbox" id="Juguetería" name="categorias[]" value="Juguetería">

                    <label for="Sana">Vida sana</label>
                    <input type="checkbox" id="Sana" name="categorias[]" value="Vida Sana">
            </div>
           

            <div class="campos">
                <label for="foto">Foto de Usuario:</label>
                <input type="file" id="foto" name="foto" accept="image/*">
            </div>

            <div class="campos">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password">
            </div>

            <div class="campos">
                <label for="confirmar_contrasenia">Confirma contraseña</label>
                <input type="password" id="confirmar_contrasenia" name="confirmar_contrasenia">
            </div>

            <div class="campos">
                <button type="submit">Enviar</button>
                <button type="button" class="delete" onclick="borrarFormulario()">Borrar Datos</button>
            </div>

        </form>

    </main>

<!-- footer -->
<%- include('../partials/footer') %>
<!-- /footer -->
</body>

</html>